FROM python:3.12-slim
COPY --from=ghcr.io/astral-sh/uv:0.9.6 /uv /uvx /bin/

RUN apt-get update && apt-get install -y git curl && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY pyproject.toml README.md ./
COPY src/ src/
# Only copy code-context's pyproject.toml so uv can resolve the source path
COPY code-context/pyproject.toml code-context/

# Slim build: no code-context, no code search indexes, no ML dependencies
ENV ENABLE_CODE_SEARCH=false
RUN uv sync --no-dev
RUN rm -rf code-context/

CMD ["uv", "run", "--no-sync", "serve"]
